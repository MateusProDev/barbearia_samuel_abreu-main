// üî• Firebase Storage Rules - Barbearia Samuel Abreu
// üîì ACESSO P√öBLICO TOTAL PARA DESENVOLVIMENTO E FUNCIONALIDADE COMPLETA

service firebase.storage {
  match /b/{bucket}/o {
    
    // üìñ LEITURA P√öBLICA TOTAL - Para exibi√ß√£o das imagens no site
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // ‚úçÔ∏è ESCRITA LIVRE PARA DESENVOLVIMENTO - Remove bloqueios CORS
    match /{allPaths=**} {
      allow write: if true;  // Permitir upload sem autentica√ß√£o durante desenvolvimento
      allow delete: if true; // Permitir exclus√£o
    }
    
    // üéØ SE√á√ÉO HERO/BANNER PRINCIPAL
    match /hero/{fileName} {
      allow read: if true;
      allow write: if true;
      allow delete: if true;
    }
    
    // ‚úÇÔ∏è SE√á√ÉO SERVI√áOS
    match /servicos/{fileName} {
      allow read: if true;
      allow write: if true;
      allow delete: if true;
    }
    
    // üñºÔ∏è SE√á√ÉO GALERIA
    match /galeria/{fileName} {
      allow read: if true;
      allow write: if true;
      allow delete: if true;
    }
    
    // üë• SE√á√ÉO EQUIPE
    match /equipe/{fileName} {
      allow read: if true;
      allow write: if true;
      allow delete: if true;
    }
    
    // üè™ SE√á√ÉO INSTALA√á√ïES
    match /instalacoes/{fileName} {
      allow read: if true;
      allow write: if true;
      allow delete: if true;
    }
    
    // üéâ SE√á√ÉO PROMO√á√ïES
    match /promocoes/{fileName} {
      allow read: if true;
      allow write: if true;
      allow delete: if true;
    }
    
    // ‚≠ê SE√á√ÉO ANTES E DEPOIS
    match /antesDepois/{fileName} {
      allow read: if true;
      allow write: if true;
      allow delete: if true;
    }
    
    // üì∏ UPLOADS GERAIS DE IMAGENS
    match /uploads/{fileName} {
      allow read: if true;
      allow write: if true;
      allow delete: if true;
    }
    
    // üîÑ UPLOADS TEMPOR√ÅRIOS
    match /temp/{fileName} {
      allow read: if true;
      allow write: if true;
      allow delete: if true;
    }
    
    // üìÅ BACKUP DE IMAGENS
    match /backup/{allPaths=**} {
      allow read: if true;
      allow write: if true;
      allow delete: if true;
    }
    
    // üé® ASSETS DO TEMA
    match /theme/{fileName} {
      allow read: if true;
      allow write: if true;
      allow delete: if true;
    }
    
    // üì± √çCONES E LOGOS
    match /icons/{fileName} {
      allow read: if true;
      allow write: if true;
      allow delete: if true;
    }
    
    // üìÑ DOCUMENTOS E CERTIFICADOS
    match /documents/{fileName} {
      allow read: if true;
      allow write: if true;
      allow delete: if true;
    }
  }
}
